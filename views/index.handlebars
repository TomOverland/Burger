<div class="container">
    <!-- HEADER -->
    <div class="jumbotron">
        <h1 class="text-center title">Eat-Da-Burger!</h1>

    </div><!-- Jumbotron -->

    <img src="public\images\burger.jpg" alt="Burger">

    <!-- ADD A NEW BURGER -->
    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-header">
                    <h2 class="card-title text-center">Add a New Burger!</h2>
                </div>

                <div class="card-body">
                    <div class="text-center">
                        <form action="/api/burgers" method="POST">
                            <input type="text" id="name" name="burger_name" placeholder="Enter Burger Name">
                            <button type="submit">Add Burger</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- BURGERS AVAILABLE TO EAT -->
        <div class="col">
            <div class="card">
                <div class="card-header">
                    <h2 class="card-title text-center">Burgers Available to Eat</h2>
                </div>
                <div class="card-body text-center">

                    {{#each burgers}}
                    {{#unless this.devoured}}


                    <form action="/api/burgers/{{this.id}}?_method=PUT" method="POST">
                        {{this.burger_name}}
                        <button type="submit" class="btn btn-warning">Devour</button>
                    </form>


                    {{/unless}}
                    {{/each}}

                </div>
            </div>
        </div><!-- col -->

        <!-- DEVOURED BURGERS -->
        <div class="col">
            <div class="card">
                <div class="card-header">
                    <h2 class="card-title text-center">Burgers Devoured</h2>
                </div>
                <div class="card-body text-center">
                    {{#each burgers}}
                    {{#if devoured}}
                    <ul class="list-unstyled">
                        <li>
                            {{this.burger_name}}
                        </li>
                    </ul>

                    {{/if}}
                    {{/each}}
                </div>
            </div>
        </div><!-- row -->
    </div> <!-- container -->