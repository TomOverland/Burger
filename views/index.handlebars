<h1 class="text-center title">Eat-Da-Burger!</h1>

<div class="container">
    <div class="row">
        <div class="col">
            <h2>
                Burgers Available to Eat
            </h2>
            <ul>
                {{#each burgers}}
                {{#unless this.devoured}}
                <li>
                    {{this.burger_name}}
                    
                    <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
                            <button type="submit" class="btn btn-warning">Devour</button>
                        </form>
                
                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col">
            <h2 class="text-center">Burgers Devoured</h2>
            <ul>
            {{#each burgers}}
            {{#if devoured}}
            <li>
                {{this.burger_name}}
            </li>
            {{/if}}
            {{/each}}
            </ul>
        </div>
    </div>
   
        <h2 class="text-center">Add a Burger</h2>

    <div class="row">
        <div class ="col"> 
            <form action="/burgers" method="POST">
            <input type="text" id="name" name="burger_name" placeholder="Enter Burger Name">
            <button type="submit">Add Burger</button>
            </form>
        </div>
    </div>
</div>

